<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/grey_50"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:id="@+id/relative_movie_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:padding="8dp"
            >

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/poster_movie_detail"
                android:layout_width="150dp"
                android:layout_height="180dp"
                android:layout_alignParentLeft="true"
                fresco:placeholderImage="@mipmap/ic_refresh_grey600_24dp"
                android:layout_marginRight="8dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The Social Network(2015)"
                android:ellipsize="end"
                android:id="@+id/title_and_year_movie_detail"
                android:layout_toRightOf="@id/poster_movie_detail"
                android:gravity="left"
                android:maxLines="3"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Drama/Comedy"
                android:id="@+id/genre_movie_detail"
                android:layout_below="@id/title_and_year_movie_detail"
                android:layout_toRightOf="@id/poster_movie_detail"
                android:layout_toEndOf="@id/poster_movie_detail"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="120 min"
                android:id="@+id/runtime_movie_detail"
                android:drawableLeft="@mipmap/ic_clock_grey600_18dp"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:layout_below="@id/genre_movie_detail"
                android:layout_toRightOf="@id/poster_movie_detail"
                android:layout_toEndOf="@id/poster_movie_detail"
                android:layout_marginBottom="10dp"
                />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6.5"
                android:id="@+id/imdb_rating_movie_detail"
                android:drawableLeft="@mipmap/ic_star_24dp"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:layout_below="@id/runtime_movie_detail"
                android:layout_toRightOf="@id/poster_movie_detail"
                android:layout_toEndOf="@id/poster_movie_detail"
                android:layout_marginBottom="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(33.289 votos)"
                android:id="@+id/imdb_votes_movie_detail"
                android:gravity="center"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@+id/imdb_rating_movie_detail"
                android:layout_toEndOf="@+id/imdb_rating_movie_detail"
                android:layout_alignTop="@+id/imdb_rating_movie_detail"
                android:layout_alignBottom="@+id/imdb_rating_movie_detail" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="78"
                android:id="@+id/imdb_metascore_movie_detail"
                android:background="@color/green"
                android:padding="6dp"
                android:gravity="center"
                android:layout_below="@id/imdb_rating_movie_detail"
                android:layout_toRightOf="@id/poster_movie_detail"
                android:layout_toEndOf="@id/poster_movie_detail"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Metascore"
                android:padding="6dp"
                android:gravity="center"
                android:layout_below="@id/imdb_rating_movie_detail"
                android:layout_toRightOf="@id/imdb_metascore_movie_detail"
                android:layout_toEndOf="@id/imdb_metascore_movie_detail"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/plot_movie_detail"
            style="@style/textview_movie_detail"
            android:text="Plot:"/>

        <TextView
            android:id="@+id/language_movie_detail"
            style="@style/textview_movie_detail"
            android:text="Language:"/>

        <TextView
            android:id="@+id/country_movie_detail"
            style="@style/textview_movie_detail"
            android:text="Country:"/>

        <TextView
            android:id="@+id/awards_movie_detail"
            style="@style/textview_movie_detail"
            android:text="Awards:"/>

        <TextView
            android:id="@+id/director_movie_detail"
            style="@style/textview_movie_detail"
            android:text="Director:"/>

        <TextView
            android:id="@+id/writer_movie_detail"
            style="@style/textview_movie_detail"
            android:text="Writer:"/>

        <TextView
            android:id="@+id/actors_movie_detail"
            style="@style/textview_movie_detail"
            android:text="Actors:"/>



    </LinearLayout>
</ScrollView>